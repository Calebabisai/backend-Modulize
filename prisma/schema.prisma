generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Tabla Roles
model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique // "ADMIN", "USER"
  users User[]
}

// Tabla Usuarios (Auth)
model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  name     String?
  
  // Relación con Role
  roleId   Int
  role     Role      @relation(fields: [roleId], references: [id])
  
  // Un usuario puede gestionar varios proyectos
  projects Project[]

  createdAt DateTime @default(now())
}

// Tabla Proyectos (Categorías)
model Project {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String?
  
  // Relación con el Usuario que lo creó (Audit)
  userId      Int
  user        User       @relation(fields: [userId], references: [id])

  // Un proyecto contiene muchos materiales
  materials   Material[]
}

// 4. Tabla Materiales (Activos)
model Material {
  id          Int      @id @default(autoincrement())
  name        String
  status      String   @default("Disponible") // Para tus gráficas
  imageUrl    String?  // Para las tarjetas en Angular
  
  // Relación con Proyecto
  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}